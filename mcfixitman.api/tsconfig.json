{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es6",
            "es7",
            "dom",
            "ES2020"
        ],
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "listFiles": false,
        "diagnostics": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "types": [
            "node"
        ],
        // typeRoots option has been previously configured
        "typeRoots": [
            // add path to @types
            "./node_modules/@types"
        ],
        "paths": {
            "src/*": [
                "src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "bin",
        "build",
        "obj",
        "config"
    ]
}