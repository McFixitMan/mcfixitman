{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "./",
    "listFiles": true,
    "diagnostics": true,
    "moduleResolution": "node",
    // typeRoots option has been previously configured
    "typeRoots": [
      // add path to @types
      "./node_modules/@types"
    ],
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "bin",
    "build",
    "obj",
    "config"
  ]
}